<link rel="stylesheet" href="/stylesheets/style-index.css">

<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <div class="dropdown mr-1">
            <button class="btn btn-outline-dark dropdown-toggle btn-sm border-0 rounded-0" type="button"
              id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              顯示順序
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <a class="dropdown-item" href="/sort/asc-name">A->Z</a>
              <a class="dropdown-item" href="/sort/desc-name">Z->A</a>
              <a class="dropdown-item" href="/sort/asc-category">類別</a>
              <a class="dropdown-item" href="/sort/asc-location">地區</a>
            </div>
          </div>
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>



    </div>
  </div>
</div>



<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">

        {{#each resList}}
        <a href="/restaurants/{{this._id}}" class="text-secondary">
          <div class="card mb-3 border border-secondary border-4">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <div class="d-flex  justify-content-between">
                <span class="badge badge-pill badge-danger font-weight-normal">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>

                <div class='function'>
                  <a class="btn btn-light rounded-circle btn-sm border-0" href="/restaurants/{{this._id}}"
                    role="button">
                    <i class="fas fa-info-circle "></i>
                  </a>

                  <a class="btn btn-light rounded-circle btn-sm border-0" href="/restaurants/{{this._id}}/edit"
                    role="button">
                    <i class="fas fa-pen "></i>
                  </a>

                  <form action="/restaurants/{{this._id}}?_method=DELETE" style="display: inline;" method="POST"
                    onsubmit="return confirm('確認要刪除該筆餐廳嗎？')">
                    <button type="submit" class="btn btn-light rounded-circle btn-sm border-0">
                      <i class="fas fa-trash "></i></button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </a>
        {{/each}}

      </div>
    </div>
  </div>
</div>